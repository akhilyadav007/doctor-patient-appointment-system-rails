<h2>Doctors list</h2>

<table border="1">
<th>Id</th>
<th>Name</th>
<th>Email</th>
<th>Edit</th>
<th>Delete</th>


<% @doctors.each do |doctor| %>
<tr>
<% if session[:doctor_id] == doctor.id %>
    <td><%= doctor.id%></td>
    <td><%= doctor.name%></td>
    <td><%= doctor.email%></td>
    <td><%= link_to 'show appointments',  doctor_appointments_path(doctor)%>
    <td><%= link_to 'edit', edit_doctor_path(doctor)%></td>
    <td><%= link_to 'delete', doctor_path(doctor), method: :delete %></td>
    <% end %>
   
</tr>
<% end %>
</table>
